# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gestock_db
DB_USER=gestock_user
DB_PASSWORD=your_secure_password_here

# Application Settings
APP_NAME=GeStock
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:3000
APP_PORT=3000

# Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=7d

# API Configuration
API_VERSION=v1
API_TIMEOUT=30000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Email Configuration
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_FROM=noreply@gestock.local

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Redis Configuration (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# External Services
# Add any third-party API keys or service configurations here
